{
  "name": "temple-webapp",
  "version": "0.0.71",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "prebuild": "node scripts/inject-meta-tags.js",
    "build": "npm run build:dev",
    "build:dev": "ng build",
    "build:prod": "ng build --configuration production && npm run postbuild",
    "build:prod:git": "ng build --configuration=production --base-href=/temple-webapp/ && npm run postbuild",
    "watch": "ng build --watch --configuration development",
    "test": "ng test",
    "postbuild": "node scripts/postbuild.js",
    "deploy:gitpages": "node scripts/deploy.js",
    "lint": "eslint \"src/**/*.{ts,html}\" --fix",
    "format": "prettier --write \"src/**/*.{ts,html,css,scss}\"",
    "deploy:firebase": "node scripts/deploy-firebase.js",
    "deploy:all-opt": "npm run deploy:firebase -- --no-commit && npm run deploy -- --no-version",
    "deploy:all": "npm run deploy:firebase"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.6",
    "@angular/cdk": "^21.0.5",
    "@angular/common": "^21.0.6",
    "@angular/compiler": "^21.0.6",
    "@angular/core": "^21.0.6",
    "@angular/fire": "^19.2.0",
    "@angular/forms": "^21.0.6",
    "@angular/platform-browser": "^21.0.6",
    "@angular/platform-browser-dynamic": "^21.0.6",
    "@angular/router": "^21.0.6",
    "firebase": "^12.7.0",
    "rxjs": "~7.8.0",
    "tslib": "^2.3.0",
    "zone.js": "^0.16.0"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^21.0.4",
    "@angular-eslint/eslint-plugin": "^19.8.1",
    "@angular-eslint/eslint-plugin-template": "^19.8.1",
    "@angular-eslint/template-parser": "^19.8.1",
    "@angular/cli": "^21.0.4",
    "@angular/compiler-cli": "^21.0.6",
    "@types/jasmine": "~5.1.0",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "autoprefixer": "^10.4.20",
    "eslint": "^9.20.1",
    "eslint-config-prettier": "^10.0.1",
    "eslint-plugin-prettier": "^5.2.3",
    "firebase-tools": "^13.5.1",
    "jasmine-core": "~5.5.0",
    "karma": "~6.4.0",
    "karma-chrome-launcher": "~3.2.0",
    "karma-coverage": "~2.2.0",
    "karma-jasmine": "~5.1.0",
    "karma-jasmine-html-reporter": "~2.1.0",
    "postcss": "^8.5.1",
    "prettier": "^3.5.1",
    "tailwindcss": "^3.4.17",
    "typescript": "~5.9.0"
  }
}
